{
    "name": "mettle/sendportal",
    "type": "project",
    "description": "SendPortal. Open-source self-hosted email marketing. Manage your own newsletters at a fraction of the cost.",
    "license": "MIT",
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "guzzlehttp/guzzle": "^7.8.1",
        "laravel/framework": "^12",
        "laravel/horizon": "^5.24",
        "laravel/tinker": "^2.9",
        "livewire/livewire": "^3.4",
        "laravel/ui": "^4.5",
        "ext-json": "*",
        "aws/aws-sdk-php-laravel": "^3.9",
        "doctrine/dbal": "^4.0",
        "illuminate/support": "^10.0|^11.0|^12",
        "kriswallsmith/buzz": "^1.2",
        "mailgun/mailgun-php": "^4.2",
        "mailjet/mailjet-apiv3-php": "^1.6",
        "nyholm/psr7": "^1.8",
        "postal/postal": "^2.0",
        "rap2hpoutre/fast-excel": "^5.4",
        "sendgrid/sendgrid": "^8.1",
        "wildbit/postmark-php": "^6.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "roave/security-advisories": "dev-master",
        "spatie/laravel-ignition": "^2.5.1",
        "orchestra/testbench": "^10.2.2",
        "phpunit/phpunit": "^11.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Sendportal\\Base\\": "packages/sendportal-core/src/",
            "Sendportal\\Base\\Database\\Factories\\": "database/factories/",
            "Sendportal\\Base\\Database\\Seeders\\": "database/seeders/"

        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
